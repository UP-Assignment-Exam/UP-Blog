<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'My Blog' %></title>

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.7/quill.snow.min.css"
      rel="stylesheet"
    />

    <!-- Extract any styles from pages -->
    <% if (typeof styles !== 'undefined') { %> <%- styles %> <% } %>
  </head>
  <body id="body-id">
    <div class="container">
      <!-- Header -->
      <div class="header">
        <nav class="nav">
          <h1 style="color: #333; font-size: 1.8em">
            <i class="fas fa-blog" style="color: #667eea"></i> BlogPlatform
          </h1>
          <div class="nav-buttons">
            <button
              id="button-profile"
              class="nav-btn"
              onclick="showSection('profile', '/profiles')"
            >
              <i class="fas fa-user"></i> Profile
            </button>
            <button
              id="button-blogs"
              class="nav-btn"
              onclick="showSection('blogs', '/')"
            >
              <i class="fas fa-list"></i> All Blogs
            </button>
            <button
              id="button-notifications"
              class="nav-btn"
              onclick="showSection('notifications', '/notifications')"
            >
              <i class="fas fa-bell"></i> Notifications
              <span
                id="notif-count"
                style="
                  background: #ff4757;
                  color: white;
                  border-radius: 50%;
                  padding: 2px 6px;
                  font-size: 0.8em;
                "
                >3</span
              >
            </button>
            <button
              id="button-create"
              class="nav-btn"
              onclick="showSection('create', '/create-blog')"
            >
              <i class="fas fa-plus"></i> Create Blog
            </button>
            <button
              id="button-settings"
              class="nav-btn"
              onclick="showSection('settings', '/settings')"
            >
              <i class="fas fa-cog"></i> Settings
            </button>
            <button
              class="nav-btn"
              onclick="logout()"
              style="background: linear-gradient(45deg, #ff6b6b, #ee5a24)"
            >
              <i class="fas fa-sign-out-alt"></i> Logout
            </button>
          </div>
        </nav>
      </div>

      <!-- Main Content Area -->
      <main class="main-content"><%- body %></main>

      <!-- Footer -->
      <footer class="main-footer">
        <div class="footer-content">
          <p>&copy; 2025 My Blog. All rights reserved.</p>
        </div>
      </footer>
    </div>

    <!-- Extract any scripts from pages -->
    <% if (typeof scripts !== 'undefined') { %> <%- scripts %> <% } %>

    <script src="/assets/js/spa.js"></script>

    <script>
      let currentTab =
        "<%= typeof currentTab !== 'undefined' ? currentTab : 'profile' %>"

      window.onload = () => {
        console.log('currentTab = ', currentTab)
        showSection(currentTab)
      }
    </script>
  </body>
</html>
